{
  "name": "flexible-leaves-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "codegen": "openapi-rq -i ./api-spec/flexible-leaves-api.yml -o src/api/generated/flexible-leaves-api",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "predev": "npm run init-database",
    "dev": "next dev",
    "build": "next build",
    "start": "docker-compose up --build",
    "lint": "next lint",
    "preprisma:dev": "npm run init-database",
    "prisma:dev": "dotenv -e .env.local -- npx prisma migrate dev",
    "init-database": "docker-compose -f .devcontainer/docker-compose.yml down -v && docker-compose -f .devcontainer/docker-compose.yml pull && docker-compose -f .devcontainer/docker-compose.yml up --detach --remove-orphans",
    "prepare": "npx husky"
  },
  "dependencies": {
    "@edge-csrf/nextjs": "^2.5.3-cloudflare-rc1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@lucia-auth/adapter-sqlite": "^3.0.2",
    "@mantine/core": "^7.16.3",
    "@mantine/dropzone": "^7.16.3",
    "@mantine/form": "^7.16.3",
    "@mantine/hooks": "^7.16.3",
    "@mui/icons-material": "^5.8.4",
    "@prisma/client": "^5.12.1",
    "@stripe/react-stripe-js": "^1.16.0",
    "@stripe/stripe-js": "^1.46.0",
    "@supabase/supabase-js": "^2.42.3",
    "@tabler/icons-react": "^3.2.0",
    "ajv": "^8.17.1",
    "better-sqlite3": "^11.3.0",
    "check-password-strength": "^2.0.10",
    "classnames": "^2.5.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.29.3",
    "lucia": "^3.2.1",
    "next": "^15.2.1",
    "prisma": "^5.21.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.3",
    "react-icons": "^4.12.0",
    "react-scroll-wheel-handler": "^2.2.0",
    "react-toastify": "^10.0.6",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@7nohe/openapi-react-query-codegen": "^1.6.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-test-renderer": "^18.3.0",
    "dotenv-cli": "^7.4.1",
    "jest": "^29.7.0",
    "jest-fixed-jsdom": "^0.0.2",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jsdom": "^24.0.0",
    "msw": "^2.4.10",
    "next-router-mock": "^0.9.13",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.14.4",
    "postcss-simple-vars": "^7.0.1",
    "react-test-renderer": "^18.3.1",
    "sharp": "^0.33.3",
    "typescript": "^5.4.5"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
